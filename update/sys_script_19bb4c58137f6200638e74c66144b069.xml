        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	// Calculate the budget item amount drawn and remaining

	var agg3 = new GlideAggregate('x_ifa_homelessness_agency_draw_item');
	agg3.addQuery('agency_draw.agency_award.sys_id', current.agency_budget.agency_award.sys_id);
	agg3.addQuery('budget_item.sys_id', current.budget_item.sys_id);
	agg3.addAggregate('SUM','item_amount');
	agg3.groupBy('budget_item');
	agg3.query();

	if(agg3.hasNext()) {
		while(agg3.next()){
			current.item_drawn_amount = Number(agg3.getAggregate('SUM','item_amount'));
		}			
	} else {
		current.item_drawn_amount = Number(0);			
	}
	current.item_amount_remaining = Number(current.item_amount) - Number(current.item_drawn_amount);
	current.update();
	
})(current, previous);]]></script>
