        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	if (current.entered_in_idis_date == '') {
		if (current.approved_in_idis_date != '') {
			current.setAbortAction(true);
			if(gs.isInteractive()) {
				gs.addErrorMessage("Entered in idis date needs to be entered prior to approved in idis date");
			}
		}
	} 
	else {
		// Find draws that are not ready to enter into IDIS
		var draw = new GlideRecord('x_ifa_homelessness_agency_draw');
		draw.addQuery('idis_voucher_number.sys_id', current.sys_id);
		draw.query();
		
		while(draw.next()){
			if (draw.draw_amount != draw.u_item_total_amount) {
				current.setAbortAction(true);
				if(gs.isInteractive()) {
					gs.addErrorMessage("Draw " + draw.number.getDisplayValue() + " needs to be completed prior to entering the entered in idis date");
				}			
			}
		}	
	}

})(current, previous);]]></script>
