        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//gs.addInfoMessage('start rule');
	// -  Abort the transaction if the grant amount is less than the grant drawn amount
	var award = new GlideRecord('x_ifa_homelessness_agency_award');  
	award.addQuery('sys_id', current.u_agency_award.sys_id); 
	award.query();

	while (award.next()){
		if (current.u_grant_amount < award.grant_amount_drawn) {
			current.setAbortAction(true);
			if(gs.isInteractive()) {
				gs.addErrorMessage("Grant amount " + current.u_grant_amount.getDisplayValue() + " must be greater than or equal to grant amount drawn " + award.grant_amount_drawn.getDisplayValue());	
			}			
		}		
	}

})(current, previous);]]></script>
