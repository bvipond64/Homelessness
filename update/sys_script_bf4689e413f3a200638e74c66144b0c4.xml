        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//gs.addInfoMessage('Rule Started');

	if (current.entered_in_idis_date != '' || current.approved_in_idis_date != '') {
		// Update the Entered in IDIS date on draws
		var draw = new GlideRecord('x_ifa_homelessness_agency_draw');
		draw.addQuery('idis_voucher_number.sys_id', current.sys_id);
		draw.query();

		while(draw.next()){
			if (current.entered_in_idis_date != '' && draw.entered_in_idis_date != '') {
				draw.entered_in_idis_date = current.entered_in_idis_date;
			}
			if (current.approved_in_idis_date != '' && draw.approved_in_idis_date != '') {
				draw.approved_in_idis_date = current.approved_in_idis_date;
			}
			
			draw.update();
		}	
	}

})(current, previous);]]></script>
